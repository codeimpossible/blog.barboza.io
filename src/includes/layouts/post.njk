---
permalink: "{% if path_prefix %}{{ path_prefix }}{% endif %}{% if path %}{{ path | slug }}{% else %}{{'/post/'}}{{ title | slug }}{% endif %}/index.html"
---

{% extends 'page.njk' %}

{%block bodyClass %}is-post{% endblock %}

{% block body %}
    <div>
        <h1>{{ title }}</h1>

        {% if excerpt %}
            <p class="excerpt">{{ excerpt }}</p>
        {% endif %}

        {% if updatedDate %}
            <span class="text-sm">ðŸ“† <em>Last updated on
                    <span datetime="{{ updatedDate }}">{{ updatedDate | dateDisplay }}</span>. Created on
                    <span datetime="{{ page.date }}">{{ page.date | dateDisplay }}</span>.</em></span>
        {% else %}
            <span class="text-sm">ðŸ“† <em>Created on
                    <span datetime="{{ page.date }}">{{ page.date | dateDisplay }}</span>.</em></span>
        {% endif %}

        {% if tags %}
            <span class="pl-10 mb-2 tags">
                <span>ðŸ”–</span>
                {% for tag in tags %}
                    {%- if tag !== "post" -%}
                        <a class="tag tag-inline" href="{{ site.baseUrl }}tag/{{ tag }}">{{ tag }}</a>
                    {%- endif -%}
                {% endfor %}
            </span>
        {% endif %}

        <div class="content post">
            {{ content | safe }}
        </div>

        {%- set previousPost = collections['postsWithoutDrafts'] | getPreviousCollectionItem(page) %}
        {%- if previousPost %}
            <span style="float: left">
                <span class="uppercase text-xs mt-6">Previous</span>
                <span class="font-bold">
                    <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
                </span>
            </span>
        {% endif %}

        {%- set nextPost = collections['postsWithoutDrafts'] | getNextCollectionItem(page) %}
        {%- if nextPost %}
            <span style="float: right">
                <span class="uppercase text-xs mt-6">Next</span>
                <span class="font-bold mb-2">
                    <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
                </span>
            </span>
        {% endif %}
        
    </div>
{% endblock %}