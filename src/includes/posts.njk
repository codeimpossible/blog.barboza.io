    <ol class="border-dotted border-t border-gray-800 pt-4 mt-4">
        {% for post in postsByCreatedDate %}
            {% if not post.data.draft %}
                <li class="mb-4 text-2xl">
                    <a href="{{ post.url | url }}">{{ post.data.title }}</a>
                    <span class="tags">
                    {% for tag in post.data.tags %}
                        {%- if tag !== "post" -%}
                            <a class="tag" href="{{ site.baseUrl }}tag/{{ tag }}">{{ tag }}</a>
                        {%- endif -%}
                    {% endfor %}
                    </span>
                </li>
            {% endif %}
        {% endfor %}
    </ol>
</div>